    <div class="box">
        <% for(var i=0;i<newListItem.length;i++) {%>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=newListItem[i]._id%>" onChange="this.form.submit()" >
                    <p><%= newListItem[i].itemName %> </p>
                </div>
                <input type="hidden" name="listName" value="<%= kindOfDay%>">
            </form>     
            </form>
        <% } %>     
        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="new Item" autocomplete="off">
            <button type="submit" name="button" value="<%= kindOfDay%>">+</button>
        </form>    
    </div>
